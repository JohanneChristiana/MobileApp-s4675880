<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondScreenActivity">

    <!--Heading-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <!--Heading Text and Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good1"
                android:textSize="32sp"
                android:layout_marginEnd="70dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="25sp"
                android:layout_marginEnd="105dp"
                />
        </LinearLayout>

        <!--Heading Icon-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/goodmorning"
                android:layout_marginStart="125dp"/>
        </LinearLayout>
    </RelativeLayout>

    <!--Blue Card-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="130dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_bluecard"
                android:padding="30dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <!--Image of Student-->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/girl"
                        app:strokeWidth="12dp"
                        app:strokeColor="@color/white"
                        app:shapeAppearance="@style/circular"
                        android:padding="10dp"
                        android:elevation="10dp" />

                    <!--Notification Button-->


                    <!--Schedule Button-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_schedule"
                        android:padding="14dp">
                        <!--Transparent Button-->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSchedule"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Text"
                            android:alpha="0"
                            android:background="@drawable/transparent_button_background">
                        </androidx.appcompat.widget.AppCompatButton>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_face_right"
                            android:layout_marginStart="145dp" />
                        <!--Text inside Schedule Button-->
                        <TextView
                            android:id="@+id/sch1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sch_next_class"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:alpha="0.7"/>
                        <TextView
                            android:id="@+id/sch2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sch1"
                            android:layout_marginTop="4dp"
                            android:text="@string/sch_date_time"
                            android:textStyle="bold"
                            android:textSize="17sp"/>
                        <TextView
                            android:id="@+id/sch3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sch2"
                            android:text="@string/sch_course_name"
                            android:textSize="13sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <!--Search-->


        <!--Recommended Section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="370dp"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reco">

            </TextView>


        </LinearLayout>


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>